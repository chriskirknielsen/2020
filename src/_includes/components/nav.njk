<nav class="nav">
  {% set navList = collections['pages_'+locale] | sortNavLocale(navSet) %}
  <ul class="nav__list">
  {% for nav in navList %}
    <li class="nav__item">
      <a href="{{ nav.url | url }}" class="nav__link u-color--accent-900"{% if nav.url == page.url %} data-current="true"{% endif %}>{{ nav.data.navtitle }}</a>
    </li>
  {% endfor %}
  </ul>
</nav>
