<nav class="nav u-displayFlex u-flex--stretchBlock">
  {% set navList = collections['pages_'+locale] | sortNavLocale(navSet) %}
  <ul class="nav__list u-displayFlex u-flex--stretchBlock">
  {% for nav in navList %}
    <li class="nav__item u-displayFlex u-flex--stretchBlock u-marginInlineStart">
      <a href="{{ nav.url | url }}" class="nav__link u-displayFlex u-flex--centerBlock u-fontBold u-color--grey-900 u-color:hover--accent-700"{% if nav.url == page.url %} data-current="true"{% endif %}>{{ nav.data.navtitle }}</a>
    </li>
  {% endfor %}
  </ul>
</nav>
