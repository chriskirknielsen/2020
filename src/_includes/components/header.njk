<header class="header u-displayFlex u-flex--center u-overflowHidden">
    <div class="header__wrap u-container u-displayFlex u-flex--centerBlock u-flex--justifyInline u-flex--wrap u-margin--flexGap u-paddingBlock u-paddingInline--double">
        {%- set ckn_logo_classes = "header__logo" -%}
        {%- set ckn_logo_fill_classes = "header__logo-fill" -%}
        {%- set ckn_logo_stroke_classes = "header__logo-stroke header__logo-stroke" -%}
        <a href="{{ metadata.languages[locale].path | url }}" class="header__logo-link u-flex--shrink-1 u-flex--grow-1 u-flex--basis-0 u-overflowVisible u-marginInlineEnd u-marginInlineStart--none u-c--secondary-med h:u-c--grey-min" aria-label="{{ header[locale].logoLink }}">
            {% include "assets/img/ckn-logo.svg" %}
        </a>

        <nav class="header__nav nav u-flex--alignSelfStretch u-displayFlex u-flex--stretchBlock u-marginInline--negative-half">
            {% include "components/nav.njk" %}
        </nav>
    </div>
</header>
