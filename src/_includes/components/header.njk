<header class="header u-displayFlex u-flex--centre u-overflowHidden u-bg--primary-max">
    <div class="header__wrap u-container u-displayFlex u-flex--centreBlock u-flex--justifyInline u-flex--wrap u-margin--flexGap u-paddingBlock u-paddingInline--double">
        {%- set ckn_logo_classes = "header__logo" -%}
        {%- set ckn_logo_fill_classes = "header__logo-fill" -%}
        {%- set ckn_logo_stroke_classes = "header__logo-stroke header__logo-stroke" -%}
        <a href="{{ metadata.languages[locale].path | url }}" class="header__logo-link u-marginInlineEnd u-c--secondary-med h:u-c--grey-min" aria-label="{{ header[locale].logoLink }}">
            {% include "assets/img/ckn-logo.svg" %}
        </a>

        <nav class="header__nav nav u-flex--alignSelfStretch u-displayFlex u-flex--stretchBlock">
            {% include "components/nav.njk" %}
        </nav>
    </div>
</header>
