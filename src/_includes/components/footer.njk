<footer class="footer fluid-type u-marginBlockStart--auto">
	<div class="u-container u-width--100 u-displayFlex u-flex--wrap u-flex--centerBlock u-padding--double">
		<div class="u-width--100 u-displayFlex u-flex--wrap u-flex--justifyInline u-flex--centerBlock">
			<p>
				{% set copyrightYear = (metadata.currentYear
					if metadata.copyrightStart == metadata.currentYear
					else metadata.copyrightStart + "&ndash;" + metadata.currentYear
				) | safe %}
				<span class="u-fontBold">{{ metadata.author.name }}</span>

				&mdash;

				&copy; {{ copyrightYear }}
				{{ footer[locale].allRights }}
			</p>
			
			<p>{{ footer[locale].buildInfo | safe }}.</p>
		</div>

		<div class="u-width--100 u-displayFlex u-flex--wrap u-flex--justifyInline u-flex--centerBlock">
			<nav class="u-displayInlineFlex u-flex--centerBlock u-marginBlockStart u-marginInlineEnd">
				<h2 class="u-textSizeInherit u-fontBody">{{ footer[locale].langLabel }}{{ punctSp }}:</h2>
				&nbsp;
				<ul class="u-displayInlineFlex">
				{% for langCode, langData in metadata.languages %}
					{% set langUrl = (langData.path + "/") if langData.path != metadata.primaryLang else langData.path %}
					<li class="footer__language-item">
						<a href="{{ langUrl | url }}" hreflang="{{ langCode }}">{{ langData.label }}</a>
					</li>
				{% endfor %}
				</ul>
			</nav>

			<nav class="u-marginBlockStart u-marginInline--negative-half" aria-labelledby="footer-external-links-title">
				<h2 class="visually-hidden" id="footer-external-links-title">{{ footer[locale].externalLinks }}</h2>

				<ul class="footer__social u-displayFlex">
					<li class="footer__social-item u-displayFlex">
						{%- set svg_rss_classes = "header__svg header__rss" -%}
						<a href="{{ localePath }}feed.xml" aria-label="{{ footer[locale].rssHint }}" class="footer__social-link u-displayInlineBlock u-padding--half {{ utilities.glowBoxLink }}">
							{% include "assets/img/rss.svg" %}
						</a>
					</li>
				{% for social in social %}
					<li class="footer__social-item u-displayFlex">
						<a href="{{ social.url | url }}" aria-label="{{ social.name }}" class="footer__social-link u-displayInlineBlock u-padding--half u-c--primary-min {{ utilities.glowBoxLink }}">
							<svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="u-displayBlock">
								{{ social.icon | safe }}
							</svg>
						</a>
					</li>
				{% endfor %}
				</ul>
			</nav>
		</div>
	</div>
</footer>
