<footer>
  &copy {{ metadata.currentYear }} {{ metadata.author.name }}

  <button type="button" data-scheme-switcher>Toggle Dusk/Dawn</button>
  
  <ul>
    {% for landCode, langData in metadata.languages %}
      {% set langUrl = (langData.path + "/") if langData.path != metadata.primaryLang else langData.path %}
      <li><a href="{{ langUrl | url }}">{{ langData.label }}</a></li>
    {% endfor %}
  </ul>
</footer>
