<section class="u-flow u-marginBlockStart">
	{% for post in postslist | reverse %}
		<article {% if post.url == url %} data-current="current item"{% endif %}>
			<h3>
				<a href="{{ post.url | url }}">
					{% if post.data.title %}
						{{ post.data.title }}
					{% else %}
						Untitled Post
					{% endif %}
				</a>
			</h3>

			<p class="u-marginBlockStart--none">
				<time datetime="{{ post.date | machineDate }}">{{ post.date | readableDate }}</time>: 

				{% if post.data.summary %}
					{{ post.data.summary }}
				{% else %}
					{{ post.excerpt }}
				{% endif %}
			</p>

			{# {% if post.data.tags %}
				<ul>
					{% for tag in post.data.tags %}
						{%- if tag != "post" -%}
							<li>
								{% set tagUrl %}/tags/{{ tag }}/{% endset %}
								<a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
							</li>
						{%- endif -%}
					{% endfor %}
				</ul>
			{% endif %} #}
		</article>
	{% endfor %}
</section>
