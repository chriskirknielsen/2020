---
layout: layouts/base.njk
section: home
---

<section class="homescreen u-displayFlex u-flex--stretch u-padding--double">
	<div class="homescreen__wrapper u-displayFlex u-flex--center u-posRelative u-afterCover u-width--100">
        <div class="homescreen__background u-posAbsolute u-absCover u-bg--main-max" aria-hidden="true"><canvas id="homescreen-scene"></canvas></div>
        <script src="{{ '/assets/js/homescreen-scene.js' | url }}" deferred></script>

        <div class="homescreen__svg-wrapper u-posRelative">
            {% set ckn_mark %}
            {% include "assets/img/home-mark.njk" %}
            {% endset %}
            {{ ckn_mark | htmlmin | safe }}
        </div>
    </div>
</section>

<section class="u-marginBlockEnd--double u-marginBlockStart--none u-paddingInline--double">
    {{ layoutContent | safe }}
</section>