<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} data-scheme="dusk" lang="{{ locale }}">

	{% include "components/head.njk" %}

	<body class="u-displayFlex u-flex--column u-c--grey-min u-bg--grey-max">

		<a class="visually-hidden skip-link u-c:h--grey-min u-bg:h--secondary-max" href="#content" data-skiplink>{{ localisedContent.skiplink }}</a>

		{% include "components/header.njk" %}
		
		<main class="main u-container {% if section != 'home' %}u-padding--double{% endif %} fluid-type" id="content" tabindex="-1">
			{{ layoutContent | safe }}
		</main>

		{% include "components/footer.njk" %}

	</body>

</html>
