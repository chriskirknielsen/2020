<!doctype html>
<html {% if section %} data-current="{{ section }}"{% endif %} data-scheme="dusk" lang="{{ locale }}">

{% include "components/head.njk" %}

<body class="u-displayFlex u-flex--column">

	<a class="visually-hidden visually-hidden--focusable u-padding--half h:u-c--grey-min h:u-bg--secondary-max" href="#content" data-skiplink>{{ localisedContent.skiplink }}</a>

	{% include "components/header.njk" %}
	
	{% set mainClassOutput -%}
	{%- if mainClasses -%}
		{%- if mainClasses != "." %}{{ mainClasses }}{%- endif -%}
	{%- else -%}
		u-container u-width--100 u-paddingInline--double
	{%- endif -%}
	{%- endset %}
	<main class="main {{ mainClassOutput }} {{ mainAddClass if mainAddClass }} {% if section != 'home' %}u-paddingBlockEnd--double u-flow{% else %}u-paddingBlockEnd--double{% endif %} fluid-type" id="content" tabindex="-1">
		{{ layoutContent | safe }}
	</main>

	{% include "components/footer.njk" %}

</body>

</html>