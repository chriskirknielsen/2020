---
pagination:
  data: collections
  size: 1
  alias: tag
  filter: ['all', 'language', 'nav', 'post', 'posts', 'posts_all', 'posts_en', 'posts_fr', 'pages', 'pages_all', 'pages_en', 'pages_fr']
permalink: /{{ localeRoot }}tags/{{ tag }}/
layout: layouts/base.njk
ownstyles: []
renderData:
  title: "{{ localisedContent.tagged }} {{ quoteOpen }}{{ tag }}{{ quoteClose }}"
---

<header class="{{ utilities.bigboi }}">
    <div class="{{ utilities.bigboiContent }}">
        <h1>{{ localisedContent.tagged }} {{ quoteOpen }}{{ tag }}{{ quoteClose }}</h1>
    </div>
</header>

{% set postslist = collections[ tag ] | tagLocale(locale) %}
{% include "components/postslist.njk" %}
