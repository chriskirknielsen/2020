---
layout: layouts/base.njk
section: post
---

<article class="u-flow">
  <h1>{{ title }}</h1>
  <p>
    <small>
      <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time> by {{ metadata.author.name }}
    </small>
  </p>

  {% if original %}
    <p>Consulter l'article original sur : <a href="{{ original | url }}" rel="nofollow">{{ original }}</a>
  {% endif %}

  {{ layoutContent | safe }}

  {% if tags %}
    <p>
    <span class="u-fontBold">{{ localisedContent.tagged }}:</span>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>