---
layout: layouts/base.njk
section: post
---

<article class="u-flow">
  <header>
    <p class="u-c--primary-med"><time datetime="{{ date | machineDate }}">{{ date | date(dateFormat, locale) }}</time></p>

    <h1>{{ title }}</h1>

    <hr>
  </header>

  {% if original %}
    <p class="u-fontItalic">
      <span aria-hidden="true">&rarr;</span>
      {{ localisedContent.original}}{{ punctSp }}:
      <a href="{{ original | url }}" rel="nofollow">{{ originalTitle or original }}</a>
    </p>
  {% endif %}

  {{ layoutContent | safe }}

  <hr>

  {% if tags %}
    <p>
    <span class="u-fontBold">{{ localisedContent.tagged }}{{ punctSp }}:</span>
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {% set tagUrl %}/tags/{{ localeRoot }}{{ tag }}/{% endset %}
        <a href="{{ tagUrl | url }}" rel="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>