---
layout: layouts/base.njk
section: post
mainClasses: .
---

<article class="content u-flow">
  <header>
    <p class="u-c--primary-med u-fontBold"><time datetime="{{ date | machineDate }}">{{ date | date(dateFormat, locale) }}</time></p>

    <h1 id="{{ title | slug }}">{{ title }}</h1>

    {# <div class="u-sep u-bg--primary-med u-marginBlockStart" aria-hidden="true"></div> #}
  </header>

  {% if original %}
    <p class="u-paddingInline u-paddingBlock--half u-border u-bg--secondary-max">
      {# <span aria-hidden="true">&rarr;</span> #}
      <span class="u-fontItalic">{{ localisedContent.original }}{{ punctSp }}:</span>
      <a href="{{ original | url }}" rel="nofollow"><span class="u-fontBold">{{ originalTitle or original }}</span></a>
    </p>
  {% endif %}

  {{ layoutContent | safe }}

  {% if externalUrl %}
    <p class="u-marginBlockStart--double">
      <a href="{{ externalUrl }}" class="u-displayInlineBlock u-paddingBlock--half u-paddingInline u-textDecoration--none u-c--primary-med u-bg--primary-min h:u-c--grey-max h:u-bg--grey-min u-fontBold u-textLarge u-lineHeight--1">
        <span class="u-displayInlineFlex u-flex--alignSelfEnd">
          {{ localisedContent.external }} {{ externalHost or externalUrl }}
          <svg class="u-displayInlineBlock u-marginInlineStart--half u-width--1em" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="square" stroke-linejoin="arcs"><path d="M13 17l5-5-5-5M6 17l5-5-5-5"/></svg>
        </span>
      </a>
    </p>
  {% endif %}

  <hr>

  {% if tags %}
    <p>
    <span class="u-fontBold">{{ localisedContent.tagged }}{{ punctSp }}:</span>
    {% set comma = joiner() %}
    {% for tag in tags %}
      {%- if tag != "post" -%}
        {%- set tagUrl %}/tags/{{ localeRoot }}{{ tag }}/{% endset -%}
        {# {{- comma() }} #}
        <a href="{{ tagUrl | url }}" rel="tag" class="u-inlineBlock u-padding--quarter {{ utilities.glowBoxLink }}">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    </p>
  {% endif %}

</article>